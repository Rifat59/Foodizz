<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5D743"
    tools:context=".RestaurentTypeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:src="@drawable/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/ffood_button_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Fast Food"
            android:textSize="25dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar4"
            >
        </Button>

        <Button
            android:id="@+id/biriyani_button_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Biriyani"
            android:textSize="25dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar3"
            >
        </Button>
    </LinearLayout>


    <Button
        android:id="@+id/chinese_button_id"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Chinese Food"
        android:textSize="25dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/quantum_white_text"
        android:background="@drawable/blar3"
        >
    </Button>


</LinearLayout>