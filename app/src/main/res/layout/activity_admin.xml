<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".AdminActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/adminn"
        android:scaleType="fitXY"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_res_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Add Restaurent"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar3"
            />

        <Button
            android:id="@+id/delete_res_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Delete Restaurent"
            android:textSize="17dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar4"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_item_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="Add Item"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar4"
            />

        <Button
            android:id="@+id/delete_item_id"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="Delete Item"
            android:textSize="17dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar3"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:text="About"
            android:textSize="20dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar3"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:text="FAQ"
            android:textSize="17dp"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/quantum_white_text"
            android:background="@drawable/blar4"
            />


    </LinearLayout>

</LinearLayout>